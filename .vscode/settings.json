{
  "terminal.integrated.defaultProfile.linux": "nix-shell",
  "terminal.integrated.profiles.linux": {
    "nix-shell": {
      "path": "nix-shell",
      "args": [
	"--run", "bash",
	"--impure",
        "--keep", "SSH_AUTH_SOCK",
        "--keep", "HOME"
	]
    }
  },

  "files.exclude": {
    "**/.git": true,
    "**/Makefile": true,
    "**/shell.nix": true,
    "**/.vscode": true,
    "**/.bashrc.local": true
  }
}
